@model  WMS.Web.Models.WorkflowModel
@{
    ViewBag.Title = "Step 1. New Workflow";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-5">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><strong>Step 1. Create a Workflow.</strong></h3>

            </div>
            <div class="panel-body small">
                Instructions here...


            </div>

        </div>


    </div>
    <div class="col-md-7">
        @Html.Partial("ModalTemplates/_Status")

        <div id="transaction">
            @using (Html.BeginForm())
            {
               <div id="alert" class="alert alert-danger hide">
            <strong>Notification</strong>
            <span id="notification"></span>
            @Html.ValidationSummary(false)
        </div>

                <div class="form-group">
                    <div class="editor-label">
                        <label>
                            Process
                        </label>
                    </div>
                    <div class="editor-field">
                        @Html.DropDownListFor(model => model.ProcessId, Model.ProcessList, string.Empty, new { @class = "combobox combobox-medium" })
                        <p class="small">Please select a process.</p>
                    </div>
                    <div class="editor-label">
                        <label>
                            SubProcess
                        </label>
                    </div>

                    @Html.Partial("Partial/SubProcess", Model)


                    <div class="editor-label">
                        <label>
                            Classification
                        </label>
                    </div>
                    @Html.Partial("Partial/Classification", Model)

                    <div class="editor-label">
                        <label>
                            Code
                        </label>
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.Code, new { @class = "form-control" })
                        <p id="status" class="small">Verify if Code exists.</p>
                    </div>
                    <div class="editor-label">
                        <label>
                            Name
                        </label>
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        <p class="small">Please indicate workflow name.</p>
                    </div>
                    <div class="editor-label">
                        <label>
                            Description
                        </label>
                    </div>
                    <div class="editor-field">
                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                        <p class="small">Please indicate workflow description(optional).</p>
                    </div>
                    @Html.Partial("Partial/Requestor", Model)
                </div>

                <div class="right">
                    <button id="btnCancel" class="btn btn-large btn-success" type="button">
                       Cancel
                    </button>
                    <button id="btnSaveAndNext" class="btn btn-large btn-success" type="button">
                        Save and Next
                    </button>

                </div>
            }
            @Html.Hidden("Item", Url.Action("Item"))
            @Html.Hidden("New", Url.Action("New"))
            @Html.Hidden("RedirectAction", Url.Action("Index", "DocumentMapping"))
            @Html.Hidden("GetSubProcessByProcessId", Url.Action("GetSubProcessByProcessId"))
            @Html.Hidden("GetAllRolesByProcessId", Url.Action("GetAllRolesByProcessId"))
            @Html.Hidden("GetClassificationBySubProcessId", Url.Action("GetClassificationBySubProcessId"))
            @Html.Hidden("CheckAvailability", Url.Action("CheckAvailability"))

        </div>
    </div>
</div>
